<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.multipleimageconverter">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pdffinal"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/pdffinal"
        android:supportsRtl="true"
        android:theme="@style/Theme.Multipleimageconverter">
        <activity
            android:name=".activity.Ready_To_Share"
            android:exported="false" >

        </activity>
        <activity
            android:name=".activity.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Multipleimageconverter.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.QRcode"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".misc.ScanReader"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".misc.DesignPdfCreator"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activity.DesignImages"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.ImageDesignDocument"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".misc.DesignFirstActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".activity.ImageDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activity.FilterActivityForTesting"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Multipleimageconverter.NoActionBar" />
        <activity
            android:name=".activity.CroppedActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Multipleimageconverter.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.DisplayActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Multipleimageconverter.NoActionBar" />
        <activity
            android:name=".activity.PdfCreater"
            android:label="Document Collage"

            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ImageToPDF"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.Multipleimageconverter" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="ocr" />
    </application>

</manifest>