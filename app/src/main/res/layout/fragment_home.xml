<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:constraint_referenced_ids="search_layout,upperTools_layout,lowerTools_layout,rv"
        app:flow_maxElementsWrap="1"
        app:flow_verticalGap="@dimen/_10sdp"
        app:flow_wrapMode="chain"
        tools:layout_editor_absoluteY="20dp" />


    <!--    Search view **************************************************-->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_layout"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="#e2f2f9"

            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:hint="Search"
            android:inputType="textPersonName"
            android:padding="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp" />


    </androidx.cardview.widget.CardView>

    <!--    Upper tools **************************************************-->
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/upperTools_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        app:constraint_referenced_ids="images,mainaddFilesFAB,mainaddCameraFAB"
        app:flow_maxElementsWrap="3"
        app:flow_wrapMode="chain" />

    <!--        Images Button tool-->
    <RelativeLayout
        android:id="@+id/images"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp">


        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#e2f2f9"
            app:cardCornerRadius="@dimen/_10sdp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@drawable/pictures" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Images"
            android:textStyle="bold" />


    </RelativeLayout>

    <!--        Files Button tool-->
    <RelativeLayout
        android:id="@+id/mainaddFilesFAB"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_weight="1">


        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#e2f2f9"
            app:cardCornerRadius="@dimen/_10sdp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@drawable/files" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Files"
            android:textStyle="bold" />

    </RelativeLayout>

    <!--        Camera Button tool-->
    <RelativeLayout
        android:id="@+id/mainaddCameraFAB"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_weight="1">


        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#e2f2f9"
            app:cardCornerRadius="@dimen/_10sdp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@drawable/camera" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Camera"
            android:textStyle="bold" />

    </RelativeLayout>


    <!--    Lower tools  *************************************************-->
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/lowerTools_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="scanner_ly,idcard_ly,qr_ly"
        app:flow_maxElementsWrap="3"
        app:flow_wrapMode="chain" />

    <!--        Scanner Tools button-->
    <RelativeLayout
        android:id="@+id/scanner_ly"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_weight="1">


