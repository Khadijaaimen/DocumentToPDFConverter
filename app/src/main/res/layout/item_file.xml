<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pdf_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_4sdp">

    <LinearLayout
        android:id="@+id/listItemLinearLayoutdocument"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@android:color/white"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">


<!--        <com.github.barteksc.pdfviewer.PDFView-->
<!--            android:id="@+id/pdf_imageView"-->
<!--            android:layout_width="@dimen/_80sdp"-->
<!--            android:layout_height="@dimen/_80sdp"-->
<!--            android:layout_marginLeft="16dp"-->
<!--            android:gravity="center"-->
<!--            tools:src="@mipmap/ic_launcher"/>-->
        <ImageView
            android:id="@+id/pdf_imageView"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            tools:src="@mipmap/ic_launcher" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_weight="5">

            <TextView
                android:id="@+id/pdf_txtNAme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:gravity="start|bottom"
                android:lines="1"
                android:text="Clean your room"
                android:textColor="#4D4C4C"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/dateItemTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pdf_txtNAme"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="start|center"
                android:text="27 Sept 2015, 22:30"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <!--  <TextView
                  android:id="@+id/sizeItemTimeTextView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/_40sdp"

                  android:layout_marginRight="@dimen/_16sdp"

                  android:gravity="end"
                  android:text="sample"
                  android:textColor="?attr/colorAccent"
                  android:textSize="@dimen/_120sdp" />-->

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>